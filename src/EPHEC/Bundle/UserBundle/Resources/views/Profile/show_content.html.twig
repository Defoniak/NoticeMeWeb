{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">


    <fieldset>
        {#<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />#}

        <div class="form-group">
            <label for="fos_user_registration_form_username" class="col-lg-2 control-label">{{ 'profile.show.username'|trans }}</label>
            <div class="col-lg-10">
                <p id="fos_user_registration_form_username">{{ user.username }}</p>
            </div>
        </div>
        <div class="form-group">
            <label for="fos_user_registration_form_email" class="col-lg-2 control-label">{{ 'profile.show.email'|trans }}</label>
            <div class="col-lg-10">
                <p id="fos_user_registration_form_email" >{{ user.email }}</p>
            </div>
        </div>
        <div class="form-group">
            <label for="fos_user_registration_form_firstname" class="col-lg-2 control-label">Firstname</label>
            <div class="col-lg-10">
                <p id="fos_user_registration_form_firstname" >{{ user.firstname }}</p>
            </div>
        </div>
        <div class="form-group">
            <label for="fos_user_registration_form_lastname" class="col-lg-2 control-label">Lastname</label>
            <div class="col-lg-10">
                <p id="fos_user_registration_form_lastname">{{ user.lastname }}</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button id="archive-button" onclick=window.location.href="edit" class="btn btn-primary btn-raised">Edit</button>
                <button id="archive-button" onclick=window.location.href="change-password" class="btn btn-primary btn-raised">Change password</button>
            </div>

        </div>
    </fieldset>
</div>
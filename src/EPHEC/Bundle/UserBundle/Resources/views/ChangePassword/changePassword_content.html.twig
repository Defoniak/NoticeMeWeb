{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
    <fieldset>
        <div class="form-group">
            <label for="fos_user_change_password_form_current_password" class="col-lg-2 control-label">{{ 'form.current_password'|trans }}</label>
            <div class="col-lg-10">
                <input type="password" id="fos_user_change_password_form_current_password" class="form-control" name="fos_user_change_password_form[current_password]" required="required">
                {{ form_errors(form.current_password) }}
            </div>
        </div>
        <div class="form-group">
            <label for="fos_user_change_password_form_plainPassword_first" class="col-lg-2 control-label">{{ 'form.new_password'|trans }}</label>
            <div class="col-lg-10">
                <input type="password" id="fos_user_change_password_form_plainPassword_first" class="form-control" name="fos_user_change_password_form[plainPassword][first]" required="required" />
            </div>
        </div>
        <div class="form-group">
            <label for="fos_user_change_password_form_plainPassword_second" class="col-lg-2 control-label">{{ 'form.new_password_confirmation'|trans }}</label>
            <div class="col-lg-10">
                <input type="password" id="fos_user_change_password_form_plainPassword_second" class="form-control" name="fos_user_change_password_form[plainPassword][second]" required="required" />
                {{ form_errors(form.plainPassword) }}
            </div>
        </div>
        {{ form_errors(form) }}
        {{ form_row(form._token) }}
    </fieldset>
    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
            <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'change_password.submit'|trans }}" />
        </div>
    </div>
    {#
    {{ form_widget(form) }}
    <div>
        <input type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
    #}
</form>

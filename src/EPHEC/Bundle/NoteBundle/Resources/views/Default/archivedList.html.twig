    <div id ="archive-memo" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Archiver un mémo</h4>
                </div>
                <div class="modal-body">
                    <p>Vous êtes sur le point d'archiver ce mémo, voulez vous continuer?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary" id="archive-button">Archiver</button>
                </div>
            </div>
        </div>
    </div>
    <input class="checkAjax" type="checkbox" checked>
    <div id="tabNote"><table id="tableNote" class="table table-striped table-hover ">
            <tr>
                <th>Description</th>
                <th>Date</th>
                <th>Adresse</th>
                <th>Archiver</th>
            </tr>
        </table>
    </div>
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script>
        var geocoder = new google.maps.Geocoder();
        createTable();

        $(document).ready(function(){
            $("input[type='checkbox']").on('change', function(){
                console.log("juju suce des bites");
            });
        })
        function geocodePositionTab(pos,callback) {
            geocoder.geocode({
                latLng: pos
            }, function(responses) {
                if (responses && responses.length > 0) {
                    callback(responses[0].formatted_address);
                } else {
                    callback('Adresse non déterminée');
                }
            })
        }
        function checkBoxTrigger(id){
            console.log(id);
        }
        function createTable(){
            var tab = {{ note | raw }};
            var empty = {{ empty }};
            if(empty == false)
            {
                $.each(tab, function (i, item) {
                    var callback;
                    if(item.deletedAt == null){
                        geocodePositionTab(new google.maps.LatLng(parseFloat(item.lat), parseFloat(item.long)), function (callback) {
                            document.getElementById('tableNote').innerHTML += '<tr><td>' + item.desc + '</td><td>' + item.date + '</td><td>'
                                    + callback + '</td><td>'+'<input class="checkAjax" data-id="'+item.id+'" type="checkbox" onchange=checkBoxTrigger('+item.id+')>'+'</td></tr>';
                        });
                    }
                    else{
                        geocodePositionTab(new google.maps.LatLng(parseFloat(item.lat), parseFloat(item.long)), function (callback) {
                            document.getElementById('tableNote').innerHTML += '<tr><td>' + item.desc + '</td><td>' + item.date + '</td><td>'
                                    + callback + '</td><td>'+'<input class="checkAjax" data-id="'+item.id+'" type="checkbox" checked>'+'</td></tr>';
                        });
                    }

                });
            }
            else {document.getElementById('emptyTable').innerHTML = "<div class='alert alert-dismissable alert-warning'>" +
                    "<button type='button' class='close' data-dismiss='alert'>×</button>" +
                    "<h4>Attention!</h4><p>Vous n'avez encore ajouté aucun mémo.</p></div>";
            }
        }
    </script>
{% endblock %}